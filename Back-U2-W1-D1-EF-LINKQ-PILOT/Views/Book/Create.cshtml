@model Back_U2_W1_D1_EF_LINKQ_PILOT.ViewModels.CreateViewModel

@{
    ViewBag.Title = "Crea nuovo prodotto";
}

<div class="container mt-5">
    <div class="row justify-content-center">

        <div class="col-lg-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">➕ Aggiungi nuovo prodotto</h4>
                </div>

                <div class="card-body">

                    <form asp-controller="Book" asp-action="Create" method="post">

                        <!-- Title -->
                        <div class="mb-3">
                            <label class="form-label">Book Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Book Title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Author -->
                        <div class="mb-3">
                            <label class="form-label">Author</label>
                            <textarea asp-for="Author" class="form-control" placeholder="Author"></textarea>
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <!-- Genre -->
                        <div class="mb-3">
                            <label class="form-label">Genre</label>
                            <input asp-for="Genre" class="form-control" placeholder="Genre" />
                            <span asp-validation-for="Genre" class="text-danger small"></span>
                        </div>
                        <!-- Available -->
                        <div class="mb-3">
                            <label class="form-label">Disponibile</label>
                            <input asp-for="Available" type="checkbox" class="form-check-input" />
                            <span asp-validation-for="Available" class="text-danger small"></span>
                        </div>

                        <!-- IMMAGINI -->
                        

                            <div class=" mb-3">
                                <label class="form-label">Cover (principale)</label>
                                <input asp-for="Cover" class="form-control" placeholder="URL immagine" />
                            </div>


                        <div class="d-flex justify-content-between mt-4">

                            <a asp-controller="Book"
                               asp-action="Index"
                               class="btn btn-secondary">
                                Annulla
                            </a>

                            <button type="submit"
                                    class="btn btn-success px-5">
                                Salva prodotto
                            </button>

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>
</div>